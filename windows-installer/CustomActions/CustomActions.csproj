<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <AssemblyName>ReleemCustomActions</AssemblyName>
    <RootNamespace>ReleemCustomActions</RootNamespace>
    <OutputType>Library</OutputType>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Deployment.WindowsInstaller" Version="3.11.1" />
    <PackageReference Include="WixToolset.Dtf.CustomAction" Version="4.0.0" />
  </ItemGroup>

  <!-- Generate CA.dll for WiX -->
  <Target Name="PackCustomAction" AfterTargets="Build">
    <PropertyGroup>
      <CustomActionOutput>$(OutputPath)$(AssemblyName).CA.dll</CustomActionOutput>
    </PropertyGroup>
  </Target>

</Project>
